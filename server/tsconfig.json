{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "./src",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "types": ["jest", "node", "express"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", ".vscode"]
}
